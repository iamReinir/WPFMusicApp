@page
@model PRN_Final.Pages.Auth.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">Welcome Back</h2>
                    <form method="post" class="login-form">
                        <div class="mb-3">
                            <label asp-for="LoginInfo.Username" class="form-label">Username</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-person"></i></span>
                                <input asp-for="LoginInfo.Username" class="form-control" required placeholder="Enter your username" />
                            </div>
                            <span asp-validation-for="LoginInfo.Username" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="LoginInfo.Password" class="form-label">Password</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-lock"></i></span>
                                <input asp-for="LoginInfo.Password" type="password" class="form-control" required placeholder="Enter your password" />
                            </div>
                            <span asp-validation-for="LoginInfo.Password" class="text-danger"></span>
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Login</button>
                        </div>
                    </form>
                    <div class="mt-3 text-center">
                        <p>Don't have an account? <a asp-page="/Auth/Register">Register here</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
