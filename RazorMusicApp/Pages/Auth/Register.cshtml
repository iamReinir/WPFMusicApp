@page
@model PRN_Final.Pages.Auth.RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">Create an Account</h2>
                    <form method="post" class="register-form">
                        <div class="mb-3">
                            <label asp-for="RegisterInfo.UserName" class="form-label">Username</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-person"></i></span>
                                <input asp-for="RegisterInfo.UserName" class="form-control" required placeholder="Choose a username" />
                            </div>
                            <span asp-validation-for="RegisterInfo.UserName" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="RegisterInfo.Email" class="form-label">Email</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-envelope"></i></span>
                                <input asp-for="RegisterInfo.Email" type="email" class="form-control" required placeholder="Enter your email" />
                            </div>
                            <span asp-validation-for="RegisterInfo.Email" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="RegisterInfo.Password" class="form-label">Password</label>
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-lock"></i></span>
                                <input asp-for="RegisterInfo.Password" type="password" class="form-control" required placeholder="Create a password" />
                            </div>
                            <span asp-validation-for="RegisterInfo.Password" class="text-danger"></span>
                        </div>
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary">Register</button>
                        </div>
                    </form>
                    <div class="mt-3 text-center">
                        <p>Already have an account? <a asp-page="/Auth/Login">Login here</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
